datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Owner {
  id       String @id @default(uuid())
  name     String
  email    String
  password String
}

model Customer {
  id      Int     @id @default(autoincrement())
  name    String
  phone   String
  address String
  orders  Order[]
}

model Order {
  id         Int       @id @default(autoincrement())
  date       DateTime  @default(now())
  customerId Int
  customer   Customer  @relation(fields: [customerId], references: [id])
  products   Product[]
  quantity   Int
}

model Product {
  id       Int     @id @default(autoincrement())
  name     String
  price    Float
  quantity Int
  orders   Order[]
  stock    Stock[]
}

model Stock {
  id        Int     @id @default(autoincrement())
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
}
